<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.finspottr.finspottr10.Register">

    <ImageView
        android:layout_width="140dp"
        app:srcCompat="@mipmap/finspottr_logo"
        android:id="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:paddingBottom="0dp"
        tools:paddingLeft="0dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Welcome to Finspottr!  Registration will alow you to create your own aircraft database.  Registering also means that you agree with the terms of service."
        android:layout_width="218dp"
        android:layout_height="116dp"
        android:id="@+id/tv_registrationNote"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.33" />

    <EditText
        android:layout_width="0dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_firstname"
        android:hint="Firstname"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="8dp"
        android:background="?android:attr/detailsElementBackground"
        android:layout_height="44dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_lastname"
        android:hint="Lastname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="?android:attr/detailsElementBackground"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_firstname" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_username"
        android:hint="Username"
        android:background="?android:attr/detailsElementBackground"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_lastname"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="0dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:hint="Password"
        android:background="?android:attr/detailsElementBackground"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_username"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="0dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_email"
        android:hint="Email"
        android:background="?android:attr/detailsElementBackground"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <Button
        android:text="Register"
        android:layout_width="0dp"
        android:id="@+id/btn_regtwo"
        android:onClick="OnReg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

</android.support.constraint.ConstraintLayout>
